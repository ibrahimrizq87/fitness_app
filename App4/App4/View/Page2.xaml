<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App4.Page2">
    <ContentPage.Content>
        <StackLayout>

            <Label Text="Enter Day:" 
                Margin="20"/>
            <Entry x:Name="stepsDay" 
               Placeholder="Day"
               Keyboard="Text"
               Margin="20"
               BackgroundColor = "#8BA3F3"
               TextColor = "WhiteSmoke"
               HeightRequest = "50"/>

            <Label Text="Enter Steps:"
                Margin="20"/>
            <Entry x:Name="stepsEntry" 
               Placeholder="no. Steps.." 
               Keyboard="Numeric"
               Margin="20"
               BackgroundColor = "#8BA3F3"
               TextColor = "WhiteSmoke"
               HeightRequest = "50"/>


            <Button Text = "Add data "
                x:Name = "Button1"
                Clicked = "SendButton_ClickedSteps"
                Margin="20"
                BackgroundColor = "#2196F3"
                TextColor = "WhiteSmoke"
                HeightRequest = "50" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>